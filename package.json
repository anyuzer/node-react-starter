{
  "name": "node-react-starter",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node server.bundle.js",
    "test": "jest --coverage",
    "lint": "eslint src --ext .js --config .eslintrc",
    "lint-fix": "npm run lint -- --fix",
    "build": "npm run build-client && npm run build-server",
    "build-client": "./node_modules/.bin/webpack -p --bail --config=\"webpack.clients.js\"",
    "build-server": "./node_modules/.bin/webpack -p --bail --config=\"webpack.server.js\"",
    "build-dev": "npm run build-client-dev && npm run build-server-dev",
    "build-client-dev": "./node_modules/.bin/webpack -d --bail --config=\"webpack.clients.js\"",
    "build-server-dev": "./node_modules/.bin/webpack -d --bail --config=\"webpack.server.js\"",
    "watch": "./node_modules/.bin/webpack --watch --config=\"webpack.config.js\""
  },
  "author": "Ian Reid",
  "license": "ISC",
  "dependencies": {
    "arc-lib": "^2.1.0",
    "babel-core": "^6.21.0",
    "babel-jest": "^18.0.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-react-css-modules": "^1.2.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-1": "^6.16.0",
    "body-parser": "^1.15.2",
    "css-loader": "^0.26.1",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "json-loader": "^0.5.4",
    "react": "^15.4.1",
    "react-css-modules": "^4.1.0",
    "react-dom": "^15.4.1",
    "style-loader": "^0.13.1",
    "webpack": "^1.14.0"
  },
  "devDependencies": {
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^3.14.1",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.9.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^18.1.0",
    "react-test-renderer": "^15.4.1",
    "webpack-dev-server": "^1.16.2"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "mocksPattern": "(?:[\\/]|^)__mocks__[\\/]",
    "coveragePathIgnorePatterns": [
      "/Adapters/"
    ],
    "testPathIgnorePatterns": [
      "/__mocks__/"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
