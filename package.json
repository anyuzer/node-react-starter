{
  "name": "node-react-starter",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node server.bundle.js",
    "start-dev": "NODE_ENV=development node server.bundle.js",
    "start-inspect": "NODE_ENV=development node --inspect server.bundle.js",
    "dev": "npm run build-dev && npm run start-dev",
    "dev-inspect": "npm run build-dev && npm run start-inspect",
    "test": "jest --coverage",
    "jest-update-snapshots": "jest -u",
    "lint": "eslint src --ext .js --config .eslintrc",
    "lint-fix": "npm run lint -- --fix",
    "build": "npm run build-client && npm run build-server",
    "build-client": "NODE_ENV=production webpack -p --bail --config=\"webpack.clients.js\"",
    "build-server": "NODE_ENV=production webpack -p --bail --config=\"webpack.server.js\"",
    "build-dev": "npm run lint && npm run build-server-dev && npm run build-client-dev",
    "build-client-dev": "NODE_ENV=development webpack -d --bail --config=\"webpack.clients.js\"",
    "build-server-dev": "NODE_ENV=development webpack -d --bail --config=\"webpack.server.js\"",
    "watch-client": "NODE_ENV=development webpack -d -w --bail --config=\"webpack.clients.js\""
  },
  "author": "Ian Reid",
  "license": "ISC",
  "dependencies": {
    "arc-lib": "^3.0.0",
    "cross-fetch": "^2.1.0",
    "koa": "^2.5.0",
    "koa-compress": "^2.0.0",
    "prop-types": "^15.6.1",
    "react": "^16.3.1",
    "react-dom": "^16.3.1"
  },
  "devDependencies": {
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^3.14.1",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.9.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.4.3",
    "react-test-renderer": "^16.3.1",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14",
    "webpack-dev-server": "^1.16.2"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "coveragePathIgnorePatterns": [
      "/Adapters/",
      "index.js",
      "styles.js"
    ],
    "testPathIgnorePatterns": [
      "/__mocks__/"
    ]
  }
}
